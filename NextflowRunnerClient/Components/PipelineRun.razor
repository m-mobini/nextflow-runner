<li class="list-group-item">
    <div class="row">
        <div class="col">@Run.PipelineRunName</div>
        <div class="col">@ConverToLocalDateTimeString(Run.RunDateTime)</div>
        <div class="col">
            @switch (@Run.Status)
            {
                case "completed":
                    <span title="@Run.Status" class="oi oi-circle-check"></span>
                    break;
                case "started":
                    <span title="@Run.Status" class="oi oi-reload"></span>
                    break;
                case "error":
                    <span title="@Run.Status" class="oi oi-warning"></span>
                    break;
                default:
                    <span class="">@Run.Status</span>
                    break;
            }
        </div>
    </div>
</li>