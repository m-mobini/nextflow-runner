@using NextflowRunnerClient.Services
<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Pline.PipelineName</h5>
    </div>
    <div>
    </div>
    <div class="card-body">
        <p>
            @Pline.GitHubUrl
        </p>
        <p class="card-text">
            @Pline.Description
        </p>
        @if (Pline.PipelineRuns != null && Pline.PipelineRuns.Any())
        {

           <RunListComponent RunList=@(Pline.PipelineRuns?.OrderByDescending(r => r.RunDateTime) ?.Take(3).ToList()   ) />

        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" href="/execute/@Pline.PipelineId">Execute</a>
    </div>
</div>