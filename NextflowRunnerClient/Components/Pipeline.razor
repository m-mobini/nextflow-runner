@using NextflowRunnerClient.Services
<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Pline.PipelineName</h5>
    </div>
    <div>
    </div>
    <div class="card-body">
        <p>
            @Pline.GitHubUrl
        </p>
        <p class="card-text">
            @Pline.Description
        </p>
        @if (Pline.PipelineRuns != null && Pline.PipelineRuns.Any())
        {
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col">Run Name</div>
                        <div class="col">Started On</div>
                        <div class="col">Status</div>
                    </div>
                </li>
                @foreach (var run in Pline.PipelineRuns?.OrderByDescending(r => r.RunDateTime)?.Take(3).ToList() ?? new List<PipelineRun>())
                {
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col">@run.PipelineRunName</div>
                            <div class="col">@ConverToLocalDateTimeString(run.RunDateTime)</div>
                            <div class="col">@run.Status</div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" href="/execute/@Pline.PipelineId">Execute</a>
    </div>
</div>